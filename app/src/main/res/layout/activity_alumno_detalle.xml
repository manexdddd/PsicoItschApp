<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:background="@color/md_theme_light_surfaceVariant"
    android:layout_height="match_parent"
    tools:context=".AlumnoDetalle">





    <!-- Note: A RecyclerView can also be used -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_marginTop="70dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView

                    android:id="@+id/fondo"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/pexels"
                    android:scaleType="centerCrop"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardMaxElevation="12dp"
                    android:layout_marginTop="30dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    >
                    <ImageView
                        android:id="@+id/fotoperf"
                        android:layout_width="150dp"
                        android:scaleType="centerCrop"
                        android:layout_height="150dp"
                        android:src="@drawable/student"
                        android:radius="10dp"
                        />
                </androidx.cardview.widget.CardView>



            </RelativeLayout>

            <TextView
                android:id="@+id/nombrealu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Samuel Pineda"
                android:fontFamily="@font/handlee"
                android:layout_marginStart="5dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="@color/md_theme_light_primary"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/button1"
                    android:padding="10dp"
                    android:textAllCaps="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/handlee"
                    android:layout_height="wrap_content"

                    android:text="Editar" />

                <Button
                    android:id="@+id/button2"
                    android:padding="10dp"

                    android:layout_marginHorizontal="10dp"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/handlee"
                    android:text="Canalizar" />

                <Button
                    android:id="@+id/button3"
                    android:padding="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/handlee"
                    android:text="Ver karnet"
                    />
            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:clickable="true"
                android:id="@+id/VPConstraintCarnet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/viewholdercar_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scrollView4"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/datosPersonalesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/handlee"
                    android:text="@string/texto21"
                    android:textColor="@color/azul02"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />



                <TextView
                    android:id="@+id/datosAcademicosText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/handlee"
                    android:text="@string/hint03"
                    android:textColor="@color/azul01"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/edadVP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="110dp"
                    android:fontFamily="@font/handlee"
                    android:text="Carrera"
                    android:textColor="@color/azul01"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/fechaNacVP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="160dp"
                    android:fontFamily="@font/handlee"
                    android:text="@string/hint05"
                    android:textColor="@color/azul01"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/controly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="210dp"
                    android:fontFamily="@font/handlee"
                    android:text="No.Control"
                    android:textColor="@color/azul01"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/emaily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="270dp"
                    android:fontFamily="@font/handlee"
                    android:text="Email"
                    android:textColor="@color/azul01"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />


                <TextView
                    android:id="@+id/nombrep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/handlee"
                    android:text="@string/hint08"
                    android:textColor="@color/azul01"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.477"
                    app:layout_constraintStart_toEndOf="@+id/datosAcademicosText"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/carrerap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="110dp"

                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/handlee"
                    android:text="@string/hint05"
                    android:textColor="@color/azul01"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/edadVP"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/controlp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="210dp"

                    android:layout_marginStart="40dp"
                    android:fontFamily="@font/handlee"
                    android:text="control"
                    android:textColor="@color/azul01"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/edadVP"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/grupop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="135dp"
                    android:layout_marginTop="160dp"
                    android:fontFamily="@font/handlee"
                    android:text="@string/hint05"
                    android:textColor="@color/azul01"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/fechaNacVP"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/emailp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="270dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/handlee"
                    android:text="Email"
                    android:textColor="@color/azul01"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/fechaNacVP"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:background="@color/md_theme_light_secondaryContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/image_view"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/teacher"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="13dp"
                        android:layout_marginTop="25dp"
                        android:textColor="@color/md_theme_light_scrim"
                        android:text="
â€œUn buen maestro es aquel que se hace progresivamente innecesario.â€"
                        android:fontFamily="@font/handlee"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/image_view" />
                    <TextView
                        android:layout_marginStart="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="12sp"
                        android:layout_marginTop="75dp"
                        android:text="By Thomas Carruthers"
                        android:textColor="@color/md_theme_light_outline"
                        android:fontFamily="@font/handlee"
                        android:layout_alignParentLeft="true"

                        android:layout_toLeftOf="@+id/image_view" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/btndelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/md_theme_dark_errorContainer"
                android:text="Eliminar usuario"
                android:padding="10dp"

                android:fontFamily="@font/handlee"
                android:layout_marginHorizontal="20dp"
                android:textAllCaps="true"
                android:textStyle="bold" />



        </LinearLayout>





    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title="Mi Alumno ðŸ¤“"
            android:background="@drawable/viewholder_backdegradient"
            app:titleTextColor="@color/md_theme_light_onPrimary"
            android:theme="@style/DefaultAppBarLayout"
            app:menu="@menu/top_app_bar2"
            app:navigationIcon="@drawable/baseline_arrow_back_24" />

    </com.google.android.material.appbar.AppBarLayout>




</androidx.constraintlayout.widget.ConstraintLayout>