<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="15dp"
    android:layout_marginTop="25dp"
    android:layout_marginEnd="15dp"
    android:background="@drawable/viewholdercarnet_back"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="MissingConstraints"
    tools:layout_marginTop="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="346dp"
        android:layout_height="270dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/viewholdercar_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/canalizacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/handlee"
            android:text="CANALIZACIÓN ACADEMICA"
            android:textAlignment="center"
            android:textColor="@color/azul02"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="7dp"
            app:layout_constraintTop_toBottomOf="@+id/canalizacion">

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:background="@color/black"
                    android:padding="10dip"
                    android:textSize="12sp"
                    android:text="Asesoria Academica"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/asesoria_academica"
                    android:padding="10dip"
                    android:textSize="12sp"
                    android:text="Ciencias Básicas" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:background="@color/black"
                    android:padding="10dip"
                    android:textSize="12sp"
                    android:text="Nombre Asignatura"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/nombreAsignatura"
                    android:padding="10dip"
                    android:textSize="12sp"
                    android:text="ProWeb" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:background="@color/black"
                    android:padding="10dip"
                    android:text="Estatus"
                    android:textSize="12sp"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/estatus"
                    android:padding="10dip"
                    android:paddingVertical="20dip"
                    android:textSize="12sp"
                    android:text="Ordinaria/Repetición" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:background="@color/black"
                    android:padding="10dip"
                    android:textSize="12sp"
                    android:text="Nombre-Firma Tutor"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/nombrefirma_tutor2"
                    android:padding="10dip"
                    android:textSize="12sp"
                    android:text="Juan Carlos Madrigal Perez" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"

                    android:background="@color/black"
                    android:padding="10dip"
                    android:textSize="12sp"
                    android:text="Fecha Atención"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/fecha_atencion"
                    android:padding="10dip"
                    android:textSize="12sp"
                    android:text="15/12/2023" />
            </TableRow>
        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>