<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="#6F94C1D4">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="30dp"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_marginStart="210dp"
        android:layout_marginTop="35dp">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/fotoalumno"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/alumno3"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nombrealumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="start"
        android:layout_marginStart="25dp"
        android:textColor="@color/md_theme_light_scrim"
        android:layout_marginHorizontal="10dp"
        android:text="JosÃ© Antonio"

        android:textStyle="bold"
        android:textSize="13sp"
        android:fontFamily="@font/handlee"/>

    <TextView
        android:id="@+id/apellidosalumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="25dp"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="@color/md_theme_light_scrim"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="45dp"
        android:text="Medina Esquivel"
        android:textStyle="bold"
        android:textSize="11sp"
        android:fontFamily="@font/handlee"/>

    <TextView
        android:id="@+id/controlalumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="25dp"
        android:textColor="@color/md_theme_light_scrim"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="75dp"
        android:text="S20030139"
        android:textSize="13sp"
        android:fontFamily="@font/handlee"/>

    <Button
        android:id="@+id/hell"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:text="VER"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="@color/md_theme_light_onTertiary"
        android:backgroundTint="#DCC570"/>

</androidx.cardview.widget.CardView>

